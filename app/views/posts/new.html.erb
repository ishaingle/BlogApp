<h1>New Post</h1>

<%= form_with(model: @post, local: true) do |form|%>
	<div>
		<label>Title:</label>
		<%= form.text_field :title, class: "form-control"%>
	</div>

	<div>
		<label>Body:</label>
		<%= form.text_area :body, class: "form-control"%>
	</div>

	<div>
		<%= form.submit "Create Post", class: "btn btn-primary"%>
	</div>
<%end%>

<a href="<%= posts_path%>">Back to posts</a>